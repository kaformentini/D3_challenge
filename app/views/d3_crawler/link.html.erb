<div class="container mt-5">
  <div class="row">
  </div>
  <div class="row justify-content-center">

    <div class="col-4 ">
      <%= form_with scope: :crawler, local: true do |form| %>
        <p>
          <%= form.label :url, 'Adicione uma URL', class: "text-center" %><br>
          <%= form.text_field :url, class:"form-control" %>
        </p>
        <p>
          <%= form.submit 'Enviar', class:"btn btn-dark btn-block app-space-button" %>
        </p>
      <% end %>
    </div>
  </div>
</div>

